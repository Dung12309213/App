<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"    android:id="@+id/container_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Thanh search bar (LinearLayout ngang) -->
    <LinearLayout
        android:id="@+id/top_view_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <!-- Logo -->
        <ImageButton
            android:id="@+id/btn_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"

            android:src="@mipmap/ic_logo"/>

        <!-- Search Box -->
        <EditText
            android:id="@+id/edt_search"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/search_box"
            android:hint="@string/editFindProduct"
            android:inputType="text"
            android:paddingHorizontal="16dp"
            android:textColor="#000000"
            android:textColorHint="#B36A38" />

        <!-- Search Button -->

        <!-- Notification -->
        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@android:color/transparent"
            android:contentDescription="Search"
            android:src="@drawable/ic_search" />

        <ImageButton
            android:id="@+id/btn_notification"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/ic_notification"
            android:background="@android:color/transparent"
            android:contentDescription="Notifications" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filter_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_filter_panel"
        android:elevation="6dp"
        android:padding="16dp"
        android:visibility="gone"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="12dp"
        android:clipToPadding="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter by Category"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginBottom="8dp">

            <CheckBox
                android:id="@+id/check_filter_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category 1"
                android:textColor="#444444"
                android:buttonTint="#A0522D"
                android:layout_marginEnd="24dp" />

            <CheckBox
                android:id="@+id/check_filter_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category 2"
                android:textColor="#444444"
                android:buttonTint="#A0522D" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_close_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close Filter"
            android:textColor="@color/white"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:layout_gravity="end"
            android:background="@drawable/bg_user_message" />
    </LinearLayout>
</LinearLayout>
