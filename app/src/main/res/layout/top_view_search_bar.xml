<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"    android:id="@+id/container_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Thanh search bar (LinearLayout ngang) -->
    <LinearLayout
        android:id="@+id/top_view_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <!-- Logo -->
        <ImageButton
            android:id="@+id/btn_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"

            android:src="@mipmap/ic_logo"/>

        <!-- Search Box -->
        <EditText
            android:id="@+id/edt_search"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/search_box"
            android:hint="@string/editFindProduct"
            android:inputType="text"
            android:paddingHorizontal="16dp"
            android:textColor="#000000"
            android:textColorHint="#B36A38" />

        <!-- Search Button -->

        <!-- Notification -->
        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@android:color/transparent"
            android:contentDescription="Search"
            android:src="@drawable/ic_search" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Nút notification -->
            <ImageButton
                android:id="@+id/btn_notification"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="Notifications"
                android:src="@drawable/ic_notification" />

            <!-- Badge số lượng -->
            <TextView
                android:id="@+id/notification_badge"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end|top"
                android:background="@drawable/badge_background"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:gravity="center"
                android:visibility="gone" />
        </FrameLayout>

    </LinearLayout>

    <!-- Khu vực filter (mặc định ẩn) -->
    <LinearLayout
        android:id="@+id/filter_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        android:background="@drawable/search_box"
        android:elevation="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter by Category"
            android:textColor="#4A4A4A"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/check_filter_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category 1"
                android:textColor="#555555"
                android:buttonTint="#6A4F4F"
                android:paddingVertical="8dp"
                android:layout_marginEnd="16dp" />

            <CheckBox
                android:id="@+id/check_filter_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category 2"
                android:textColor="#555555"
                android:buttonTint="#6A4F4F"
                android:paddingVertical="8dp" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_close_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close Filter"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_user_message"
        android:backgroundTint="@null"/>

    </LinearLayout>
</LinearLayout>
