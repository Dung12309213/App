<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.applepie">

    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ApplePieApp"
        tools:targetApi="31">

        <activity
            android:name=".UI.Order_Detail"
            android:exported="false" />
        <activity
            android:name=".UI.Coupon"
            android:exported="false" /> <!-- Đặt ProductReviewActivity làm launcher -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Các activity còn lại -->
        <activity
            android:name=".UI.ProductDetail"
            android:exported="false" />
        <activity
            android:name=".UI.ProductListActivity"
            android:exported="false" />
        <activity
            android:name=".UI.CategoryList"
            android:exported="false" />
        <activity
            android:name=".UI.LoginScreenOTP"
            android:exported="false" />
        <activity
            android:name=".UI.LoginScreen1"
            android:exported="false" />
        <activity
            android:name=".UI.LoginScreen2"
            android:exported="false" />
        <activity android:name=".UI.HelpCenterActivity" />
        <activity android:name=".UI.PaymentMethodsActivity" />
        <activity android:name=".UI.SettingsActivity" />
        <activity android:name=".UI.PolicyActivity" />
        <activity android:name=".UI.ChatBotActivity" />
        <activity android:name=".UI.MyOrdersActivity" />
        <activity android:name=".UI.ChangePasswordActivity" />
        <activity android:name=".UI.CartActivity" />
        <activity
            android:name=".UI.ProfileActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>