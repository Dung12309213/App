<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutPopup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_popup_rounded"
    android:padding="16dp"
    android:elevation="8dp"
    android:layout_margin="8dp">

    <!-- Dung tích -->
    <TextView
        android:id="@+id/tvVolumeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/nunito_medium"
        android:text="Biến thể"
        android:textColor="@color/textcolor"
        android:textSize="16sp" />

    <GridLayout
        android:id="@+id/gridVariant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:padding="8dp"
        >
    </GridLayout>


    <!-- Số lượng -->
    <TextView
        android:id="@+id/tvQuantityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_medium"
        android:text="Số lượng"
        android:textColor="@color/textcolor"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="8dp">

        <ImageButton
            android:id="@+id/btnMinus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#D7CCC8"
            android:contentDescription="Trừ"
            android:foregroundTint="@color/brown"
            android:src="@drawable/button_minus" />

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:fontFamily="@font/nunito_medium"
            android:text="1"
            android:textSize="34sp" />

        <ImageButton
            android:id="@+id/btnPlus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#D7CCC8"
            android:contentDescription="Cộng"
            android:foregroundTint="@color/brown"
            android:src="@drawable/button_plus" />
    </LinearLayout>

    <!-- Giá -->

    <!-- Nút MUA NGAY -->

    <Button
        android:id="@+id/btnProductBuyConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/brown"
        android:fontFamily="@font/nunito_bold"
        android:paddingVertical="12dp"
        android:text="MUA NGAY"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>
