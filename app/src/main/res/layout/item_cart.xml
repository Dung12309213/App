<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Ảnh sản phẩm -->
        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_homepage_mau2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Tên sản phẩm -->
        <TextView
            android:id="@+id/txtName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/nunito_bold"
            android:maxLines="2"
            android:text="Mặt nạ nghệ Hưng Yên"
            android:textColor="@color/textcolor"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgProduct"
            app:layout_constraintTop_toTopOf="@id/imgProduct" />

        <!-- Dung tích -->
        <TextView
            android:id="@+id/txtSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/nunito_medium"
            android:text="Dung tích: 100ml"
            android:textColor="@color/textcolor"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/txtName"
            app:layout_constraintStart_toEndOf="@id/imgProduct"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Giá tiền -->
        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nunito_bold"
            android:text="345.000 đ"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/txtSize"
            app:layout_constraintTop_toBottomOf="@id/txtSize" />

        <!-- Nút giảm -->
        <ImageButton
            android:id="@+id/btnDecrease"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@android:color/transparent"
            android:src="@drawable/minus"
            android:contentDescription="Giảm số lượng"
            app:tint="@color/brown"
            app:layout_constraintEnd_toStartOf="@id/txtQuantity"
            app:layout_constraintBottom_toBottomOf="@id/txtPrice" />

        <!-- Số lượng -->
        <TextView
            android:id="@+id/txtQuantity"
            android:layout_width="32dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:text="1"
            android:textSize="20sp"
            android:textColor="@color/textcolor"
            android:fontFamily="@font/nunito_medium"
            app:layout_constraintEnd_toStartOf="@id/btnIncrease"
            app:layout_constraintBottom_toBottomOf="@id/txtPrice" />

        <!-- Nút tăng -->
        <ImageButton
            android:id="@+id/btnIncrease"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/plus"
            android:contentDescription="Tăng số lượng"
            app:tint="@color/brown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/txtPrice" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
