<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Nút quay lại -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="45dp"
            android:layout_height="44dp"
            android:layout_gravity="start"
            android:background="#FBFFFFFF"
            android:src="@drawable/ic_back_arrow"
            android:scaleType="center"
            android:layout_marginBottom="24dp" />

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_login_screen_otpverification"
            android:textColor="#1D1D1D"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- Mô tả -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_login_screen_verifytophone"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#888888"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <!-- 4 ô OTP -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:gravity="center">

            <EditText
                android:id="@+id/otp1"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/edittext_background"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/otp2"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/edittext_background"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/otp3"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/edittext_background"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/otp4"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/edittext_background"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textSize="18sp"
                android:textColor="#000" />
        </LinearLayout>

        <!-- Gửi lại mã -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/title_login_didntreceive"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtResend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/title_login_resend"
            android:textColor="#B38A44"
            android:textSize="14sp"
            android:textStyle="italic" />

        <!-- Nút xác nhận -->
        <Button
            android:id="@+id/btnVerify"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:text="@string/title_Login_Signupnow"
            android:backgroundTint="#823800"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
