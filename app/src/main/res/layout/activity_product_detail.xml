<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <!-- Product Image + Back Button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/productmau" />

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_margin="12dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_back_arrow"
                    android:layout_gravity="top|start" />
            </RelativeLayout>

            <!-- Product Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:gravity="start|center_vertical">

                <!-- Product Category -->
                <TextView
                    android:id="@+id/tvProductDetailCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chăm sóc tóc"
                    android:textColor="#B46A00"
                    android:textSize="14sp" />

                <!-- Star Icon -->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_star_yellow" />

                <!-- Product Rating -->
                <TextView
                    android:id="@+id/tvProductDetailRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="4.9"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/tvProductDetailName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nước dưỡng tóc tinh dầu bưởi"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Price -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:gravity="start|center_vertical">

                <!-- Discounted price of the product (larger font) -->
                <TextView
                    android:id="@+id/tvDiscountedPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="600.000 VND"
                    android:textColor="@color/brown"
                    android:textSize="20sp"
                    android:gravity="start"
                    android:layout_marginEnd="10dp"
                    android:textStyle="bold" />

                <!-- Original price of the product (with strikethrough and smaller font) -->
                <TextView
                    android:id="@+id/tvOriginalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="800.000 VND"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:gravity="start"
                android:layout_marginEnd="10dp"
                android:textStyle="italic"
             />


            </LinearLayout>

            <!-- Short Features -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp">

                <!-- Nội dung mô tả rút gọn -->
                <TextView
                    android:id="@+id/tvProductDetailDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/title_productdetail_desc"
                    android:textColor="#444444"
                    android:textSize="14sp" />


                <!-- Xem thêm -->
                <TextView
                    android:id="@+id/tvProductDetailSeeMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem thêm"
                    android:textColor="#B36A38"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp">

                <!-- Cột 1 -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="❌ Không Sulfate àhakshfkashfkashk"
                    android:layout_columnWeight="1"/>

                <!-- Cột 2 (dịch qua phải) -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="✔ Tóc gãy rụng test độ dài "
                    android:layout_marginStart="45dp"
                    android:layout_columnWeight="1"/>

                <!-- Cột 1 -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="❌ Không Paraben test độ dài"
                    android:layout_columnWeight="1"/>

                <!-- Cột 2 (dịch qua phải) -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="✔ Tóc yếu"
                    android:layout_marginStart="45dp"
                    android:layout_columnWeight="1"/>
            </GridLayout>

            <!-- Tabs HDSD -->
            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/layoutInstruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/headerInstruction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxWidth="250dp"
                        android:paddingEnd="10dp"
                        android:text="Hướng dẫn sử dụng"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/arrowInstruction"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_down"
                        android:layout_marginStart="0dp" />
                </LinearLayout>


                <!-- Nội dung ẩn -->
                <TextView
                    android:id="@+id/tvProductDetailInstruction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hướn dẫn sử dụng ở đây, a,b,c,d,e,f.."
                    android:textColor="#444444"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:paddingStart="4dp"
                    android:paddingEnd="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/layoutIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/headerIngredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxWidth="250dp"
                        android:paddingEnd="10dp"
                        android:text="Thành phần sản phẩm"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/arrowIngredients"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_down"
                        android:layout_marginStart="0dp" />
                </LinearLayout>


                <!-- Nội dung ẩn -->
                <TextView
                    android:id="@+id/tvProductDetailIngredient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chi tiết thành phần sản phẩm ở đây..."
                    android:textColor="#444444"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:paddingStart="4dp"
                    android:paddingEnd="8dp" />
            </LinearLayout>


            <!-- Reviews -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đánh giá sản phẩm (123)"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dung Chu ⭐⭐⭐⭐⭐" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="abcdef...xyz" />

                <!-- Ảnh đính kèm -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Một ảnh minh họa -->
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="8dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_homepage_mau2" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="8dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/tinhchathoahong_4" />

                        <!-- Thêm bao nhiêu ảnh tùy thích -->
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:text="Xem tất cả"
                android:textColor="#B46A00" />

            <!-- Related Products -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sản phẩm được xem cùng"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="10dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="10dp">

                    <!-- Product 1 -->
                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:src="@drawable/productmau" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nước dưỡng tóc tinh dầu bưởi 140ml" />
                    </LinearLayout>

                    <!-- Product 2 -->
                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:src="@drawable/productmau" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sữa tắm dưỡng da 200ml" />
                    </LinearLayout>

                    <!-- Product 3 -->
                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:src="@drawable/productmau" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kem dưỡng ẩm 100g" />
                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom buttons -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:background="#FFF8F5"
        android:orientation="horizontal"
        android:padding="12dp"
        android:weightSum="2">

        <!-- Custom Add to Cart Button -->
        <LinearLayout
            android:id="@+id/btnAddToCart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="2dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/imgCart"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/buy_nav"
                android:tint="#9C5221" />

            <TextView
                android:id="@+id/tvAddToCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm vào giỏ hàng"
                android:textColor="#9C5221"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Buy Now Button -->
        <Button
            android:id="@+id/btnBuyNow"
            style="@android:style/Widget.Material.DropDownItem.Spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#9C5221"
            android:text="MUA NGAY"
            android:textAlignment="center"
            android:textColor="@android:color/white" />
    </LinearLayout>

</RelativeLayout>
