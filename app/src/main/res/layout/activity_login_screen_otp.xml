<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header: Back button + Title -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Nút Back -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_backbutton" />

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvOtpTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vollkorn"
            android:text="@string/title_login_screen_otpverification"
            android:textColor="@color/textcolor"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/btnBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnBack" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Nội dung cuộn -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Mô tả -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nunito_medium"
                android:gravity="center"
                android:text="@string/title_login_screen_verifytophone"
                android:textAlignment="center"
                android:textColor="@color/textcolor"
                android:textSize="16sp" />

            <!-- 4 ô OTP -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="32dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/otp1"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/edittext_background"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/otp2"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/edittext_background"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/otp3"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/edittext_background"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/otp4"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/edittext_background"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:textSize="18sp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <!-- Gửi lại mã -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/nunito_medium"
                android:text="@string/title_login_didntreceive"
                android:textColor="@color/textcolor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtResend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/nunito_medium"
                android:text="@string/title_login_resend"
                android:textColor="@color/lightbrown"
                android:textSize="16sp"
                android:textStyle="italic" />
        </LinearLayout>
    </ScrollView>

    <!-- Nút xác nhận -->
    <Button
        android:id="@+id/btnVerify"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:backgroundTint="@color/brown"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/title_confirm"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
</LinearLayout>
