<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutPopup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_popup_rounded"
    android:padding="16dp"
    android:elevation="8dp"
    android:layout_margin="8dp">

    <!-- Dung tích -->
    <TextView
        android:id="@+id/tvVolumeTitle"
        android:text="Dung tích"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="12dp">

        <Button
            android:id="@+id/btn140ml"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="140 ml"
            android:backgroundTint="#E0E0E0" />

        <View
            android:layout_width="8dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btn360ml"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="360 ml"
            android:backgroundTint="#E0E0E0" />
    </LinearLayout>

    <!-- Số lượng -->
    <TextView
        android:id="@+id/tvQuantityTitle"
        android:text="Số lượng"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="8dp">

        <ImageButton
            android:id="@+id/btnMinus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="#D7CCC8"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/button_minus"
            android:contentDescription="Trừ"
            />

        <TextView
            android:id="@+id/tvQuantity"
            android:text="1"
            android:textSize="16sp"
            android:layout_marginHorizontal="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/btnPlus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="#D7CCC8"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/button_plus"
            android:contentDescription="Cộng"
           />
    </LinearLayout>

    <!-- Giá -->
    <TextView
        android:id="@+id/tvPrice"
        android:text="165.000 đ"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Nút MUA NGAY -->
    <Button
        android:id="@+id/btnProductBuyConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#9C5221"
        android:text="MUA NGAY"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingVertical="12dp" />
</LinearLayout>
