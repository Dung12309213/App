<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/vollkorn"
            android:text="@string/title_CreateAccount"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Họ và tên -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/title_Login_FullName"
            android:textColor="@color/textcolor"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtRegisterName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_background"
            android:fontFamily="@font/nunito_bold"
            android:hint="@string/hint_FullName"
            android:padding="12dp"
            android:textSize="16sp" />

        <!-- Số điện thoại -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/title_Account_Phonenumber"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtRegisterPhone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_background"
            android:fontFamily="@font/nunito_medium"
            android:hint="@string/hint_PhoneNumber"
            android:inputType="phone"
            android:padding="12dp"
            android:textSize="16sp" />

        <!-- Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/title_Account_Email"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtRegisterEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_background"
            android:fontFamily="@font/nunito_medium"
            android:hint="@string/hint_Email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textSize="16sp" />

        <!-- Mật khẩu -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/title_LoginScreen_Password"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtRegisterPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_background"
            android:fontFamily="@font/nunito_medium"
            android:hint="@string/hint_CreatePassword"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textSize="16sp" />

        <!-- Nút đăng ký -->
        <Button
            android:id="@+id/btnCompleteRegister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/brown"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/title_Login_Signupnow"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <!-- Dòng chuyển hướng -->
        <TextView
            android:id="@+id/txtNoAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/nunito_medium"
            android:text="@string/title_have_account"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:fontFamily="@font/nunito_medium"
            android:text="@string/title_signinnow"
            android:textColor="@color/lightbrown"
            android:textSize="16sp"
            android:textStyle="italic" />

    </LinearLayout>
</ScrollView>
